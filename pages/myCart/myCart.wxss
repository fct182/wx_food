/* pages/myCart/myCart.wxss */
page{
  background: #f5f5f5;
}
.list{
  background: #fff;
  display: flex;
  width: 100%;
  margin-top: 20rpx;
  justify-content: space-between;
  /* align-items: center; */
  overflow: hidden;
}
.item{
  width: 100%;
  margin-left: -90px;
  transform: translateX(90px);
  transition: all .4s;
  display: flex;
  padding: 10rpx;
}
.delete{
  width: 90px;
  background: rgb(185, 25, 25);
  color: #fff;
  /* 动画 */
  transform: translateX(90px);
  transition: all .4s;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 动画 */
.touch-move .item,.touch-move .delete{
  transform: translateX(0);
}
.circle{
  display: flex;
  align-items: center;
  justify-content: center;
  padding-right: 10rpx;
}
.img image{
  width: 180rpx;
  height: 180rpx;
}
.img{
  margin-right: 20rpx;
}
.title{
  margin-bottom: 10rpx;
}
.desc{
  color: #666;
  font-size: 26rpx;
  line-height: 34rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
.content{
  position: relative;
}
.bottom{
  position: absolute;
  left: 0;
  bottom: 0;
  font-size: 26rpx;
  display: flex;
}
.price{
  color: red;
  margin-right: 40rpx;
}

.reduce{
  padding: 4rpx 10rpx;
  border: 1rpx solid #999;
}
.num{
  margin: 0 20rpx;
}
.add{
  background: #333;
  color: #fff;
  padding: 4rpx 10rpx;
}

.gao{
  height: 100rpx;
}

/* 合计 */
.myCart-bottom{
  position: fixed;
  bottom: 0;
  background: #fff;
  display: flex;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  align-items: center;

}
.selectedAll{
  flex: 1;
  display: flex;
  align-items: center;
  vertical-align: middle;
  padding-left: 10rpx;
}
.selectedAll icon{
  width: 23px;
  height: 23px;
  margin-right: 6rpx;
}

.heji{
  padding-right: 20rpx;
  font-size: 26rpx;
}
.heji text{
  color:  #43bf92;
}
.jiesuan{
  /* background: #43bf92; */
  background: #999;
  color: #fff;
  padding-right: 10rpx;
  padding-left: 10rpx;
}
.acitveAll{
  background: #43bf92;
}