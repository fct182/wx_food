/* pages/foodDetail/foodDetail.wxss */
page{
  background: #f5f5f5;
}
.title{
  background: #fff;
  padding: 20rpx;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}
.price{
  padding: 20rpx;
  background: #fff;
  margin:10rpx 0;
}
.price text{
  color: rgb(245, 30, 30);
}
image{
  width: 100%;
}
.content{
  line-height: 36rpx;
  font-size: 28rpx;
  margin: 20rpx;
  color: #666;
  text-indent: 2em;
  line-height: 40rpx;
}
/* 购物车布局 */
.bottom{
  width: 100%;
  display: flex;
  background: #fff;
  height: 110rpx;
  justify-content: flex-end;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: 0;
}
.img image{
  width: 60rpx;
  height: 60rpx;
}
.addShop,.buy-now{
  background: red;
  padding: 16rpx;
  color: #fff;
  margin-left: 20rpx;
  border-radius: 10rpx 0 0 10rpx;
}
.buy-now{
  margin-left: 0;
  border-radius: 0 10rpx 10rpx 0;
  opacity: .3;
  margin-right: 20rpx;
}