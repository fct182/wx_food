/* 轮播图样式 */
.banner{
  height: 338rpx;
  position: relative;
}
.banner swiper{
  height: 338rpx;
}
.banner image{
  width: 100%;
  height: 338rpx;
}
.banner swiper-item{
  position: relative;
}
.banner-info{
  position: absolute;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .5);
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  text-align: center;
  color: #fff;
}
.banner-num{
  position: absolute;
  right: 10rpx;
  bottom: 0;
  color: #fff;
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
}
/* 每日一测 */
.oneDay{
  display: flex;
  margin: 35rpx 20rpx;
  text-align: center;
  justify-content: space-around;
  color: #666;
  font-size: 27rpx;
}
.item image{
  width: 306rpx;
  height: 186rpx;
}
/* 内容信息 */
.list{
  padding-top: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #eee;
}
.title{
  font-size: 32rpx;
  color: #1a1a1a;
  margin-bottom: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.list-box{
  display: flex;
}
.list image{
  width: 215rpx;
  height: 140rpx;
}
.info{
  padding-left: 20rpx;
  height: 140rpx;
  position: relative;
  flex: 1;
}
.content{
  /* 多行文本溢出隐藏 */
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 26rpx;
  color: #777;
}
.view-num{
  position: absolute;
  bottom: 0;
  right: 0;
  font-size: 24rpx;
}
.view-num text{
  color: red;
  padding-right: 5rpx;
}